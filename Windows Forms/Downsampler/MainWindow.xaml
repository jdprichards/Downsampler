<Window x:Class="Downsampler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Downsampler"
        xmlns:ViewModels="clr-namespace:Downsampler.ViewModels"
        mc:Ignorable="d"
        Title="Downsampler"
        Height="720"
        Width="1350"
        WindowState="Maximized">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom"
              Height="50"
              Background="Gray">
            <TextBlock Text="Developed by Joeseph Richards | github.com/jdprichards"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"/>
        </Grid>

        <Grid DockPanel.Dock="Top"
              Height="50"
              Background="Gray"
              >

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Downsampler"
                       VerticalAlignment="Center"
                       Margin="10"
                       Foreground="White"
                       FontWeight="DemiBold"
                       FontSize="18" />

            <Button Click="clkExit"
                    Grid.Column="1"
                    Content="Exit"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Width="30"
                    Height="30"
                    Background="Red"
                    Foreground="White" />

        </Grid>

        <Border Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                ClipToBounds="True">

            <DockPanel Name="MainDockPanel">
                <DockPanel.DataContext>
                    <ViewModels:FileViewModel />
                </DockPanel.DataContext>
                <Grid Name ="ProgressGrid" 
                      DockPanel.Dock="Bottom"
                      Margin="100 0"
                      Visibility="Hidden">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <Grid Name="ProgressLabels"
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   FontSize="18"
                                   Text="File Progress:" 
                                   HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1"
                                   FontSize="18"
                                   Text="Row Progress"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <Border Margin="20 0 0 0" Grid.Column="1">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3"
                                              BlurRadius="15" />
                        </Border.Effect>
                        <Grid Name="ProgressBars"
                              Visibility="Visible">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>

                            <ProgressBar Grid.Row="0"
                                         Name="FilesProgress"
                                         Value="{Binding File.FilePercentage}"
                                         Minimum="0"
                                         Maximum="100"
                                         Margin="5" />
                            <TextBlock Grid.Row="0"
                                       Name="FilesPercent"
                                       Text="{Binding File.FilePercentageString}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <ProgressBar Grid.Row="1"
                                         Name="RowsProgress"
                                         Value="{Binding File.RowPercentage}"
                                         Maximum="100"
                                         Margin="5" />
                            <TextBlock Grid.Row="1"
                                       Name="RowsPercent"
                                       Text="{Binding File.RowPercentageString}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                        </Grid>

                    </Border>
                    <Grid Grid.Column="2">

                        <Grid
                              Name="ProgressAmounts">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Name="FilesRemaining"
                                       FontSize="18"
                                       FontWeight="DemiBold"
                                       TextAlignment="Left"
                                       Text="{Binding File.FileCompleteRatio}"
                                       Margin="10 0 0 0"
                                       Visibility="Visible"/>


                            <TextBlock Grid.Row="1"
                                       Name="RowsRemaining"
                                       FontSize="18"
                                       FontWeight="DemiBold"
                                       TextAlignment="Left"
                                       Text="{Binding File.RowCompleteRatio}"
                                       Margin="10 0 0 0" />

                        </Grid>
                    </Grid>
                </Grid>

                <Grid DockPanel.Dock="Top">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />

                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="425" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>

                        <Button Name="btnDownsample" 
                                Click="clkDownsample"
                                Content="Downsample"
                                Height="25"
                                Width="125"
                                Margin="25 5"
                                Grid.Column="3"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                FontSize="18" />

                        <TextBlock Text="Import File / Folder:"
                                   Grid.Column="0"
                                   Height="50"
                                   Width="200"
                                   Margin="5"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   FontSize="18" />

                        <TextBox Name="tbImportFilePath"
                                 Text="{Binding File.InputFile}"
                                 Grid.Column="1"
                                 Height="25"
                                 Width="400"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
                                 Margin="5"
                                 FontSize="18" />

                        <Button Name="btnImportSearchFile" 
                                Click="clkImportSearchFile"
                                Content="Search File"
                                Grid.Column="3"
                                Width="150"
                                Height="25"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="5"
                                FontSize="18" />

                        <Button Name="btnImportSearchFolder" 
                                Click="clkImportSearchFolder"
                                Content="Search Folder"
                                Grid.Column="3"
                                Width="150"
                                Height="25"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="5"
                                FontSize="18"
                                Visibility="Hidden"/>

                        <CheckBox Name="chkDownsampleFolder"
                                  Grid.Column="2"
                                  Content="Downsample Folder"
                                  Width="150"
                                  Margin="0,10,0,-10"
                                  HorizontalAlignment="Center"
                                  IsChecked="True"
                                  Checked="CheckBoxDownsampleFolder_Checked"
                                  Unchecked="CheckBoxDownsampleFolder_Unchecked" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="425" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="107*" />
                            <ColumnDefinition Width="266*" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Export Folder:"
                                   Grid.Column="0"
                                   Height="25"
                                   Width="125"
                                   Margin="5,5,0,0"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   FontSize="18" />

                        <TextBox Name="tbExportFolder"
                                 Text="{Binding File.OutputFolder}"
                                 Grid.Column="1"
                                 Height="25"
                                 Width="400"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
                                 Margin="5,5,0,0"
                                 FontSize="18" />

                        <Button Click="clkExportSearchFolder"
                                Content="Search Folder"
                                Grid.Column="3"
                                Width="150"
                                Height="25"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="5,5,0,0"
                                FontSize="18"
                                Grid.ColumnSpan="2" />
                    </Grid>
                </Grid>
            </DockPanel>
        </Border>
    </DockPanel>
</Window>
